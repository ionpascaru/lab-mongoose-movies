<div class="list-group-item list-group-item-action">
    <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">{{ celebrity.name }}</h5>
        <small>{{ celebrity.occupation }}</small>
    </div>
    <p class="mb-1">{{ celebrity.catchPhrase }}</p>
    
    <a href="/celebrities/{{celebrity.id}}/edit" class="btn btn-success">
      Edit
    </a>
    <form class="d-inline" action="/celebrities/{{celebrity.id}}/delete" method="POST">
      <button class="btn btn-danger">Delete</button>
    </form>
</div>