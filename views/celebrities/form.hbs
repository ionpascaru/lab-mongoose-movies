{{#if celebrity.isNew}}
  <h1>New Celebrity</h1>
  <form class="p-4 bg-white border" action="/celebrities/add" method="POST">
{{else}}
  <h1>Edit</h1>
  <form class="p-4 bg-white border" action="/celebrities/{{book.id}}/edit" method="POST">
{{/if}}

  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" class="form-control" name="name" id="name" value="{{celebrity.name}}">
  </div>

  <div class="form-group">
    <label for="occupation">Occupation:</label>
    <input type="text" class="form-control" name="occupation" id="occupation" value="{{celebrity.occupation}}">
  </div>

  <div class="form-group">
    <label for="catchPhrase">catchPhrase:</label>
    <textarea class="form-control" id="catchPhrase" name="catchPhrase" rows="4">{{celebrity.catchPhrase}}</textarea>
  </div>

  <button type="submit" class="btn btn-success">Submit!</button>
</form>